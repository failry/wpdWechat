<!--index.wxml-->
  <view class="container">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class='login-warp'>
          <view class='form-group'>
            <label class='form-label'><image src='../../images/login/phone.png'></image></label>
            <input class='form-input' type='number' placeholder='请输入手机号码' maxlength='11' bindinput='userNameInput'></input>
          </view>
          <view class='form-group'>
            <label class='form-label'><image src='../../images/login/password.png'></image></label>
            <input class='form-input' type='password' placeholder='请输入密码' maxlength='20' bindinput='passWdInput'></input>
          </view>
          <view class='form-forget' url="" bindtap='forgetPwd'>
          忘记密码</view>
          <button class='form-button' formType="submit">登录</button>
      </view>
    </form>
  </view> 


